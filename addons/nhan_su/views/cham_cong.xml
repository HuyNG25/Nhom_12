<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_cham_cong_tree" model="ir.ui.view">
        <field name="name">cham_cong.tree</field>
        <field name="model">cham_cong</field>
        <field name="arch" type="xml">
            <tree decoration-danger="di_muon_ve_som == True">
                <field name="nhan_vien_id"/>
                <field name="ngay"/>
                <field name="gio_vao"/>
                <field name="gio_ra"/>
                <field name="so_cong" sum="Tổng công"/>
                <field name="ot_hours" sum="Tổng OT"/>
                <field name="di_muon_ve_som" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

    <record id="view_cham_cong_form" model="ir.ui.view">
        <field name="name">cham_cong.form</field>
        <field name="model">cham_cong</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group string="Thông tin nhân viên">
                            <field name="nhan_vien_id"/>
                            <field name="ngay"/>
                        </group>
                        <group string="Thời gian">
                            <field name="gio_vao"/>
                            <field name="gio_ra"/>
                        </group>
                    </group>
                    <group string="Kết quả tính toán">
                        <field name="so_cong"/>
                        <field name="ot_hours"/>
                        <field name="di_muon_ve_som"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_cham_cong" model="ir.actions.act_window">
        <field name="name">Chấm công hàng ngày</field>
        <field name="res_model">cham_cong</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>